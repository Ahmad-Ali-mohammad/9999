[Unit]
Description=Docker Compose Application Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/money-way
ExecStart=/usr/bin/docker compose -f /opt/money-way/docker-compose.prod.yml up -d --build
ExecStop=/usr/bin/docker compose -f /opt/money-way/docker-compose.prod.yml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
